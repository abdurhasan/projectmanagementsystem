
<% include partials/header.ejs%>

  <div class="container">

    <form class="form-signin" method="post">
      <h2 class="form-signin-heading"><center><b>Project Management System</b></center></h2>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Isi email bos" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Isi password bos" required>
      
        <% if(loginMessage.length > 0){ %>
        <div class="alert alert-danger" role="alert">
          <%= loginMessage %>
        </div>
        <% } %>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>        
        email : admin@mail.com
        password : admin
      </form>
      
    </div>

  </body>
  </html>
